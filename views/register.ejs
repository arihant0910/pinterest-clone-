<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-cover bg-zinc-300 flex items-center justify-center">
    <div class="w-[25vw] h-[80vh] bg-white px-10 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Create new account</h1>
      <form action="/register" method="post" class="mt-5">
        <input class="border-2 rounded-md w-full px-4 py-2 mt-2" type="text" name="username" placeholder="username">
        <input class="border-2 rounded-md w-full px-4 py-2 mt-2" type="text" name="fullname" placeholder="fullname">
        <input class="border-2 rounded-md w-full px-4 py-2 mt-2" type="email" name="email" placeholder="email">
        <input class="border-2 rounded-md w-full px-4 py-2 mt-2" type="password" name="password" placeholder="password">
        <input class="border-2 rounded-md w-full px-4 py-2 mt-2" type="number" name="contact" placeholder="contact">
        <input class="border-3  w-full px-3 py-2 mt-4 bg-red-600 rounded-full"  type="submit" value="create new account">
        <p class="text-xs font-semibold text-zinc-700 mt-7 text-center w-2/3 mx-auto">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy; . </p>
      </form>
      <a class="inline-block mt-5 text-sm font-semibold text-zinc-700 w-full text-center" href="/">Log in an Existing account ?</a>
    </div>

  </div>
  <% include ./partials/header.ejs %>
